{{#get "posts" filter="featured:true" limit="all" as |featured|}}
    {{#if featured}}
        <section class="featured-wrapper container">
            <h2 class="featured-title">Featured articles</h2>
            <div class="featured-feed owl">
                {{#foreach featured visibility="all"}}
                    <article class="{{post_class}}">
                        {{#if feature_image}}
                            <div class="u-placeholder horizontal">
                                <img class="lazyload u-object-fit" data-srcset="{{> srcset}}" data-sizes="auto"
                                    src="{{img_url feature_image size="m"}}"
                                    srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" alt="{{title}}">
                            </div>
                        {{/if}}
                        <h3 class="post-title">{{title}}</h3>
                        <a class="u-permalink" href={{url}} aria-label="{{title}}"></a>
                        <div class="single-meta">
                            <span class="single-meta-item single-meta-date">
                                <time datetime="{{date format="YYYY-MM-DD"}}">
                                    {{date published_at}}
                                </time>
                            </span>
                            <span class="single-meta-item single-meta-length">
                                {{reading_time}}
                            </span>
                            {{#primary_tag}}
                                <span class="single-meta-item single-meta-tag">
                                    <a class="post-tag post-tag-{{slug}}" href="{{url}}">
                                        {{name}}
                                    </a>
                                </span>
                            {{/primary_tag}}
                        </div>
                    </article>
                {{/foreach}}
            </div>
        </section>
    {{/if}}
{{/get}}